@model IEnumerable<Livros.Models.Autor>

@{
    ViewData["Title"] = "Index";
}

<h1>Lista de Autores</h1>

<p>
    <a class="btn btn-success" role="button" asp-action="Create">Adicionar Novo Autor</a>
</p>
<table class="table table-dark">
    <thead>
        <tr>
            <th>
               Nome
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Nacionalidade)
            </th>
            <th>
                Ações
            </th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Nacionalidade)
            </td>
            <td>
                <a class="btn btn-primary" role="button" asp-action="Edit" asp-route-id="@item.AutorId">Editar</a> 
                <a class="btn btn-warning" role="button" asp-action="Details" asp-route-id="@item.AutorId">Detalhes</a> 
                <a class="btn btn-danger" role="button" asp-action="Delete" asp-route-id="@item.AutorId">Deletar</a>
            </td>
        </tr>
}
    </tbody>
</table>
