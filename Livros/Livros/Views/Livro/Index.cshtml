@model IEnumerable<Livros.Models.Livro>

@{
    ViewData["Title"] = "Index";
}

<h1>Lista de Livros</h1>

<p>
    <a class="btn btn-success" role="button" asp-action="Create">Criar Novo</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Titulo)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Autor)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Categoria)
            </th>
            <th>Ações</th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Titulo)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Autor.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Categoria.Name)
            </td>
            <td>
                <a class=" btn btn-primary" role="button" asp-action="Edit" asp-route-id="@item.LivroId">Editar</a> 
                <a class="btn btn-warning" role="button" asp-action="Details" asp-route-id="@item.LivroId">Detalhes</a> 
                <a class="btn btn-danger" role="button" asp-action="Delete" asp-route-id="@item.LivroId">Deletar</a>
            </td>
        </tr>
}
    </tbody>
</table>
